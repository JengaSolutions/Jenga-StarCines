<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="StarCinesApp" transaction-type="RESOURCE_LOCAL">
		<class>starcines.model.entities.Cartelera</class>
		<class>starcines.model.entities.Genero</class>
		<class>starcines.model.entities.Horario</class>
		<class>starcines.model.entities.Pelicula</class>
		<class>starcines.model.entities.Sala</class>
		<class>starcines.model.entities.Usuario</class>
		<properties>
			<property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/Cine"/>
			<property name="javax.persistence.jdbc.user" value="postgres"/>
			<property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver"/>
			<property name="javax.persistence.jdbc.password" value="postgres"/>
			<property name="eclipselink.jdbc.bind-parameters" value="false"/>
		</properties>
	</persistence-unit>
</persistence>
